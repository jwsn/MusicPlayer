<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/history_screen"
    >

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/myhistory_playingButtonLayout"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:background="@drawable/song_item_bg" 
	  >	

		<ImageButton
		    android:id="@+id/myhistory_backbutton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:background="@drawable/back_button" />
        <TextView
            android:id="@+id/myhistory_name_text"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="最近播放"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="35dip" />
        <ImageButton
		    android:id="@+id/myhistory_next_page_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:background="@drawable/next_page_button" />
        
	</RelativeLayout>
    
    <ListView
        android:id="@+id/historylistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/listview_line" 
		android:dividerHeight="20px"
		android:paddingLeft="15px"
        android:drawSelectorOnTop="false" />
<!--  
	<ListView 
	android:id="@id/android:list"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:layout_weight="30" 
	android:drawSelectorOnTop="false" />
	-->
 </LinearLayout>    

</RelativeLayout>
